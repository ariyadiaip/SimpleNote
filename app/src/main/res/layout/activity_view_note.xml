<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ViewNote" >

    <LinearLayout
            android:id="@+id/llview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/backBtnView"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back" />
        <TextView
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:text="Detail Note"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />
        <ImageView
                android:id="@+id/editBtn"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_edit" />
        <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete" />
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llview"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
                android:id="@+id/tvTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:text="Title" />

        <TextView
                android:id="@+id/tvDescriptView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tvTitleView"
                android:layout_below="@+id/tvTitleView"
                android:layout_marginTop="10dp"
                android:text="Description" />


    </RelativeLayout>

</RelativeLayout>